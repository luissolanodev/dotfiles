# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{c,cpp,h,java,pl,pm,go,gradle,tex}]
indent_style = tab
tab_width = 4

[*.{py,qml,prisma,lua}]
indent_style = space
indent_size = 4

[*.{html,css,scss,js,jsx,ts,tsx,astro,jsp,md,markdown,dart,yml,yaml,json,fxml}]
indent_style = space
indent_size = 2
